using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace lesson_1
{
    class Program
    {
        static void Main(string[] args)
        {
            
            Console.WriteLine("Задание 1:");
            Console.Write("Введите длину прямоугольника:  ");
            uint a = Convert.ToUInt32(Console.ReadLine());
            Console.Write("Введите ширину прямоугольника:  ");
            uint b = Convert.ToUInt32(Console.ReadLine());
            uint P = 2 * (a + b);
            uint S = a * b;
            Console.WriteLine($"периметр прямоугольника: {P}");
            Console.WriteLine($"площадь прямоугольника: {S}");
            Console.WriteLine();

            Console.WriteLine("Задание 2:");
            Console.Write("Введите диаметр окружности:  ");
            uint d = Convert.ToUInt32(Console.ReadLine());
            Console.WriteLine($"Длинна окружности:  { 3.14 *d}");
                Console.WriteLine();

            Console.WriteLine("Задание 3:");
            Console.WriteLine("Введите 2 числа:");
            double q = Convert.ToDouble(Console.ReadLine());
            double w = Convert.ToDouble(Console.ReadLine());
            Console.WriteLine($"Cредние арифметическое 2-х чисел:  {(q+w)/2}");
                Console.WriteLine();  
            
            Console.WriteLine("Задание 4:");
            Console.WriteLine("Введите 2 числа:");
            double e = Convert.ToDouble(Console.ReadLine());
            double r = Convert.ToDouble(Console.ReadLine());
            Console.WriteLine($"Сумма квадратов заданных чисел:{e*e+r*r}");
            Console.WriteLine($"Разность квадратов заданных чисел:{e * e - r * r}");
            Console.WriteLine($"Произведение квадратов заданных чисел:{e * e * r * r}");
            Console.WriteLine($"Частное квадратов заданных чисел:{(e * e) / (r * r)}");
                Console.WriteLine();

            Console.WriteLine("Задание 5:");
            Console.WriteLine("Введите 2 числа:");
            double t = Math.Abs((Convert.ToDouble(Console.ReadLine())));
            double y = Math.Abs((Convert.ToDouble(Console.ReadLine())));
            Console.WriteLine($"Сумма модулей чисел: {t+y}");
            Console.WriteLine($"Разность модулей чисел; {t - y}");
            Console.WriteLine($"Произведение модулей чисел: {t * y}");
            Console.WriteLine($"Частное модулей чисел: {t / y}");
        }
    }
}
